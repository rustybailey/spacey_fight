version 16
__lua__
ship={
	x=64,
	y=64,
	dx=2,
	dy=2,
	tilt_l=false,
	tilt_r=false,
	update=function(self)
		self.tilt_l=false
		self.tilt_r=false
		if(btn(0)) then
			self.x-=self.dx
			self.tilt_l=true
		end
		
		if(btn(1)) then
			self.x+=self.dx
			self.tilt_r=true
		end
		
		if(btn(2)) then
			self.y-=self.dy
		end
		
		if(btn(3)) then
			self.y+=self.dy
		end
	end,
	draw=function(self)
		if(self.tilt_l==true) then
			spr(9,self.x,self.y,2,2,true)
		elseif(self.tilt_r==true) then
			spr(9,self.x,self.y,2,2)
		else
			spr(7,self.x,self.y,2,2)
		end
	end
}

function _init()
	
end

function _update60()
	ship:update()
end

function _draw()
	cls()
	rectfill(0,0,127,127,1)
	ship:draw()
end

